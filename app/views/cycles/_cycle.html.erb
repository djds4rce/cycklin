<li class="isotope-item <%=cycle.brand %> <%=cycle.cycle_type %>">
  <div class="grid-cycle">
    <a id='<%=cycle.id%>' href='<%=cycle.url%>'>
      <img src='<%= cycle.image_url %>' \>
      <div class="cycle-info clearfix">
        <p class="pull-left desc"><%=cycle.brand.titleize %>'s <%= cycle.name %>, <i><%=cycle.cycle_type %></i> bike.</p>
        <p class="rs pull-right"><%=cycle.price %></p>        
      </div>
    </a>
  </div>
</li>


